{
  "private": true,
  "name": "spectrum-css-monorepo",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "author": "Adobe",
  "contributors": [
    "Cassondra Roberts <castastrophe@users.noreply.github.com> (https://allons-y.llc)",
    "Garth Braithwaite <garthdb@gmail.com> (https://garthdb.com)",
    "Larry Davis <lazdnet@gmail.com>",
    "Patrick Fulton <pfulton@users.noreply.github.com>",
    "Steve Gill <stevengill97@gmail.com>"
  ],
  "homepage": "https://opensource.adobe.com/spectrum-css/",
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/spectrum-css.git"
  },
  "bugs": {
    "url": "https://github.com/adobe/spectrum-css/issues"
  },
  "scripts": {
    "build": "yarn build:components",
    "build:all": "run-s build:components build:site build:preview",
    "build:clean": "run-s clean build",
    "build:components": "lerna run --scope \"${SCOPE:-@spectrum-css/*}\" --ignore \"@spectrum-css/{preview,generator}\" build",
    "build:preview": "lerna run --scope @spectrum-css/preview build",
    "build:site": "gulp copySiteResources && gulp buildDocs -LLL",
    "ci": "run-s build:all mv:site mv:preview",
    "ci:storybook": "yarn workspace @spectrum-css/preview storybook",
    "clean": "run-p clean:*",
    "clean:cache": "nx reset",
    "clean:components": "lerna run --scope \"${SCOPE:-@spectrum-css/*}\" --ignore \"@spectrum-css/{preview,generator}\" clean",
    "clean:site": "rimraf dist/",
    "clean:storybook": "rimraf tools/preview/storybook-static",
    "dev": "yarn start",
    "lint": "nx run-many --target=lint --all --verbose",
    "mv:preview": "mv tools/preview/storybook-static dist/preview",
    "mv:site": "mv site/dist dist",
    "new": "yarn workspace @spectrum-css/generator new",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "release": "yarn version:build && lerna publish",
    "release:beta-from-package": "yarn release from-package --conventional-prerelease --preid beta --pre-dist-tag beta --no-private",
    "release:site": "gh-pages -d dist/ -f -e .",
    "start": "lerna run --scope @spectrum-css/preview start",
    "test": "lerna run --scope @spectrum-css/preview test",
    "test:scope": "lerna run --scope @spectrum-css/preview test:scope",
    "version:build": "lerna run --include-dependents --since origin/main build",
    "watch": "lerna watch --include-dependencies -- 'lerna run --include-dependents --since build'"
  },
  "workspaces": [
    "components/*",
    "tools/*",
    "tokens/*"
  ],
  "devDependencies": {
    "@adobe/focus-ring-polyfill": "^0.1.5",
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "gh-pages": "^5.0.0",
    "husky": "^8.0.3",
    "lerna": "^6.6.1",
    "lint-staged": "^13.2.1",
    "loadicons": "^1.0.0",
    "lunr": "^2.3.6",
    "markdown-it": "^12.3.2",
    "npm-run-all": "^4.1.5",
    "nx": "^15.9.2",
    "prettier": "^2.8.7",
    "prettier-package-json": "^2.8.0",
    "prismjs": "^1.23.0",
    "pug": "^3.0.2",
    "rimraf": "^5.0.0",
    "yargs": "^17.6.2"
  },
  "engines": {
    "node": ">=14.0.0 <18"
  },
  "browserslist": [
    "last 2 Edge versions",
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 iOS versions",
    "last 2 ChromeAndroid versions",
    "not ie <= 11"
  ],
  "lint-staged": {
    "components/*/package.json": [
      "node ./tasks/packageLint.js"
    ],
    "*.md": [
      "prettier --write"
    ],
    "components/*/*.{css,js}": [
      "prettier --write"
    ],
    "package.json": [
      "prettier-package-json --write"
    ]
  }
}

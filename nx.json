{
  "schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "@spectrum-css",
  "cli": {
    "packageManager": "yarn"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "start"]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "{workspaceRoot}/*.css"
      ],
      "outputs": [
        "{workspaceRoot}/dist"
      ],
      "implicitDependencies": [
        "@spectrum-css/component-builder",
        "@spectrum-css/component-builder-simple"
      ]
    },
    "start": {
      "dependsOn": ["^build"]
    }
  },
  "includedScripts": ["build", "start"]
}

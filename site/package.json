{
  "name": "@spectrum-css/documentation",
  "version": "1.0.0",
  "description": "Spectrum CSS's documentation site.",
  "license": "Apache-2.0",
  "author": "Adobe",
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/spectrum-css.git",
    "directory": "site"
  },
  "bugs": {
    "url": "https://github.com/adobe/spectrum-css/issues"
  },
  "main": ".eleventy.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production npm-run-all -l clean build:*",
    "build:eleventy": "eleventy",
    "build:webpack": "webpack",
    "clean": "rimraf dist",
    "dev": "yarn start",
    "start": "cross-env NODE_ENV=development npm-run-all -l clean -p start:* & wait-on http://localhost:${PORT:-8080}/ && open http://localhost:${PORT:-8080}",
    "start:eleventy": "eleventy --serve --incremental",
    "start:webpack": "webpack --watch"
  },
  "optionalDependencies": {
    "@spectrum-css/preview": "^3.0.12"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-dev-server": "^1.0.4",
    "@11ty/eleventy-navigation": "^0.3.5",
    "@11ty/eleventy-plugin-bundle": "^1.0.4",
    "@11ty/eleventy-plugin-directory-output": "^1.0.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "@adobe/focus-ring-polyfill": "^0.1.5",
    "@spectrum-web-components/picker": "^0.30.0",
    "cross-env": "^7.0.3",
    "eleventy-plugin-code-clipboard": "^0.1.0",
    "fast-glob": "^3.2.12",
    "js-yaml": "^4.1.0",
    "lit-html": "^2.7.3",
    "loadicons": "^1.0.0",
    "lunr": "^2.3.9",
    "markdown-it": "^13.0.1",
    "markdown-it-anchor": "^8.6.7",
    "markdown-it-attrs": "^4.1.6",
    "markdown-it-container": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "nunjucks": "^3.2.4",
    "outdent": "^0.8.0",
    "prismjs": "^1.29.0",
    "rimraf": "^5.0.0",
    "wait-on": "^7.0.1"
  },
  "nx": {
    "targets": {
      "clean": {
        "inputs": [
          "{workspaceRoot}/dist"
        ]
      },
      "build": {
        "dependsOn": [
          "clean",
          "^build"
        ],
        "inputs": [
          "{workspaceRoot}/_data",
          "{workspaceRoot}/_includes",
          "{workspaceRoot}/_layouts",
          "{workspaceRoot}/assets",
          "{workspaceRoot}/content",
          "{workspaceRoot}/scripts",
          "{workspaceRoot}/.eleventy.js",
          "{projectRoot}/package.json",
          "{projectRoot}/tools/component-builder/index.js",
          "{projectRoot}/tools/component-builder-simple/index.js"
        ],
        "outputs": [
          "{workspaceRoot}/dist"
        ]
      },
      "dev": {
        "dependsOn": [
          "^build"
        ],
        "inputs": [
          "{workspaceRoot}/_data",
          "{workspaceRoot}/_includes",
          "{workspaceRoot}/_layouts",
          "{workspaceRoot}/assets",
          "{workspaceRoot}/content",
          "{workspaceRoot}/scripts",
          "{workspaceRoot}/.eleventy.js"
        ],
        "outputs": [
          "{workspaceRoot}/dist"
        ]
      },
      "start": {
        "dependsOn": [
          "^build"
        ],
        "inputs": [
          "{workspaceRoot}/_data/*",
          "{workspaceRoot}/_includes/*",
          "{workspaceRoot}/_layouts/*",
          "{workspaceRoot}/assets/*",
          "{workspaceRoot}/content/*",
          "{workspaceRoot}/scripts/*",
          "{workspaceRoot}/.eleventy.js"
        ],
        "outputs": [
          "{workspaceRoot}/dist"
        ]
      }
    },
    "implicitDependencies": [
      "@spectrum-css/*",
      "@spectrum-css/preview",
      "!@spectrum-css/generator"
    ],
    "includedScripts": [
      "build",
      "dev",
      "clean",
      "start"
    ]
  }
}
